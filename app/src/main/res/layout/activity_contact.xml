<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#fff"
    android:scrollbars="none"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:elevation="0dp"
                app:elevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@android:color/transparent"
                        android:elevation="0dp"
                        android:gravity="center"
                        app:elevation="0dp"
                        app:layout_scrollFlags="scroll|enterAlways"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                        app:titleTextColor="#fff">

                    </android.support.v7.widget.Toolbar>

                    <LinearLayout
                        android:id="@+id/btnBack"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:src="@drawable/ic_arrow_back_24px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:fontFamily="@font/myriadproregular"
                            android:text="Contact Us"
                            android:textColor="#231F20"
                            android:textSize="18dp" />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.design.widget.AppBarLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/enama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama"
                    android:paddingLeft="16dp"
                    android:inputType="text"
                    android:paddingRight="16dp"
                    android:background="@android:color/transparent"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginTop="14dp"
                    android:alpha="0.1"></View>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/eemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="text"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@android:color/transparent"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginTop="14dp"
                    android:alpha="0.1"></View>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/etelepon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Telepon"
                    android:inputType="number"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@android:color/transparent"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginTop="14dp"
                    android:alpha="0.1"></View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/esubjek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Subjek"
                    android:inputType="text"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@android:color/transparent"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginTop="14dp"
                    android:alpha="0.1"></View>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/epesan"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:gravity="top"
                    android:hint="Pesan"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@android:color/transparent"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginTop="14dp"
                    android:alpha="0.1"></View>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:id="@+id/button"
                android:layout_marginLeft="48dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                app:cardBackgroundColor="#4fa7db"
                android:layout_marginTop="24dp"
                android:layout_marginRight="48dp"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/tright"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="KIRIM PESAN"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btnfb"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_fb"/>
                <ImageView
                    android:id="@+id/btntw"
                    android:layout_width="28dp"
                    android:padding="4dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_tw"/>
                <ImageView
                    android:id="@+id/btnig"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_ig"/>
                <ImageView
                    android:id="@+id/btnwa"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_wa"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>