<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.apps.testprojek">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        tools:node="replace"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:allowBackup="false"
        tools:replace="android:allowBackup"
        android:fullBackupOnly="false"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity android:name=".presentation.modules.introSplash.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".presentation.modules.introLogin.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar"></activity>
        <activity android:name=".presentation.modules.mainProfile.ProfileActivity"
            android:screenOrientation="portrait"
            android:label="My Profile"></activity>
        <activity android:name=".presentation.modules.mainAbout.AboutActivity"
            android:screenOrientation="portrait"
            android:label="About Us"></activity>
        <activity android:name=".presentation.modules.mainHome.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar"></activity>
        <activity android:name=".presentation.modules.mainContact.ContactActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar"></activity>

        <activity android:name=".presentation.modules.mainDetail.DetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar"></activity>

        <activity android:name=".presentation.modules.mainFavourite.FavouriteActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar"></activity>
    </application>

</manifest>